{
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "isolatedModules": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "./src/*"
            ]
        },
        "outDir": "build",
        "skipLibCheck": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": true
    }
}